@model LionFishWeb.Models.User

@{
    ViewBag.Title = "Log In";
}

<!DOCTYPE html>

<main>
    <section id="logsign">
        <div class="ungriddy">
            <div id="block-log" class="block-logsign">
                <h1>Existing user? Log in<span style="color:#EDA831;">.</span></h1>
                <p>Eaque ipsa quae ab illo inventore veritatis et quasi architecto beatae vitae dicta sunt explicabo.</p>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div>
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { id = "input-log-email", @class = "input-email", placeholder = "Email address" } })
                    </div>
                    <div class="block-password">
                        @Html.PasswordFor(model => model.Pass, new { id = "input-log-password", @class = "input-password", placeholder = "Password" })
                        <div class="show-password hide">Show</div>
                    </div>
                    <div>
                        <div class="g-recaptcha" data-sitekey="6LcPQ30UAAAAAFRDS6_hR4jehjr1-PliyM1R5HLG"></div>
                        <input formaction=@Url.Action("LogIn") formmethod="post" type="submit" id="submit-log" class="button-black" value="Log in">
                        @Html.ActionLink("Forgot password", "ForgotPassword", "Home", new { area = "" }, new { id = "", @class = "" })
                    </div>
                }
            </div>
            <div>
                Don't have an account? @Html.ActionLink("Sign Up.", "SignUp", "Home", new { area = "" }, new { id = "", @class = "" })
            </div>
        </div>
        <div class="griddy"></div>
    </section>
</main>
